  .kuang .btnWrapper {
    width: 100%;
    display: flex;
    border-top: 2rpx solid rgba(0, 0, 0, 0.1);
  }
  .kuang .btnWrapper .btn {
    flex: 1;
  }
  .kuang .btnWrapper .btn.calcel {
    border-right: 2rpx solid rgba(0, 0, 0, 0.1);
  }
  .kuang .btnWrapper .btn.allow .buttons {
    color: #576B95;
  }
  .kuang .btnWrapper .btn .buttons {
    font-size: 34rpx;
    color: #000;
    font-weight: 500;
    padding: 0;
    border: 0;
    background: #fff;
    padding: 10rpx 0;
  }
  .kuang .btnWrapper .btn .buttons::after {
    border: 0;
  }
  