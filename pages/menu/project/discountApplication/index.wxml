<!-- pages/menu/project/discountApplication/index.wxml -->
<view class="m-window m-discount m-flex">
    <view class="m-header">
        <view class="header-search">
            <view class="header-inp">
                <view class="inp">
                    <van-search disabled="{{preventCtrl}}" model:value="{{ searchVal }}" placeholder="请输入搜索关键词" bind:search="onSearch" use-left-icon-slot="false" bind:focus="onFocus" bind:clear="handleClear" />
                    <view class="inp-icon">
                        <text class="iconfont icon-search"></text>
                    </view>
                </view>
            </view>
            <!-- <view class="header-sort" bindtap="sortShow">
                <text class="iconfont icon-sort"></text>
            </view> -->
            <view class="header-screen" bindtap="filterShow">
                <text class="iconfont icon-filter"></text>
            </view>
        </view>
    </view>
    <view class="m-middle">
        <scroll-view scroll-y class="m-scroll" refresher-enabled scroll-anchoring refresher-triggered="{{loading}}" bindrefresherrefresh="onRefresh" bindscrolltolower="onLoading">
            <van-cell-group wx:if="{{netStatus==''}}" class="m-noDivider">
                <block wx:for="{{list}}" wx:for-item="i" wx:key="index" wx:for-index="idx">
                    <van-cell wx:for="{{i.a}}" wx:for-item="j" wx:key="title" title="{{j.requestName}}" is-link use-label-slot bind:click="goDetail" data-gid="{{j.requestId}}" data-type="{{j.workflowBaseInfo.workflowName}}">
                        <view slot="label">
                            <view>类型：{{j.workflowBaseInfo.workflowName}}</view>
                            <view>状态：{{j.status}}</view>
                            <view>最后操作人：{{j.lastOperatorName}}</view>
                            <view>最后更新时间：{{j.lastOperateTime}}</view>
                        </view>
                    </van-cell>
                </block>
            </van-cell-group>
            <my-empty wx:else image="{{errImg}}" description="{{netStatus}}" />
        </scroll-view>
    </view>
